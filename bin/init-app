#!/usr/bin/env bash

echo "Creating datasource files..."

mkdir resources/db && mkdir resources/db_test && touch resources/db/users.json && touch resources/db/users_ip.json

echo '{"1":{"id":1,"name":"Sergio Palma","ip":"83.223.227.125","ip_region":"Lisbon, Lisbon, Portugal"},"2":{"id":2,"name":"Manolo Engracia","ip":"181.191.232.168","ip_region":"Latacunga, Provincia de Cotopaxi, Ecuador"},"3":{"id":3,"name":"Fito Cabrales","ip":"77.162.109.160","ip_region":"Roosendaal, North Brabant, Netherlands"},"4":{"id":4,"name":"Paco Lopez","ip":"120.90.101.160","ip_region":"Beijing, Beijing, China"},"5":{"id":5,"name":"Esther Garc\u00eda","ip":"90.90.101.160","ip_region":"Paris, \u00cele-de-France, France"}}' | tee resources/db/users.json > /dev/null

echo '{"1":{"ip":"83.223.227.125","userId":1},"2":{"ip":"181.191.232.168","userId":2},"3":{"ip":"77.162.109.160","userId":3},"4":{"ip":"120.90.101.160"},"5":{"ip":"90.90.101.160"}}' | tee resources/db/users_ip.json > /dev/null

echo "Datasource created"

echo "Creating datasource for Unit Tests..."

touch resources/db_test/users.json && touch resources/db_test/users_ip.json

echo '{"1":{"id":1,"name":"Sergio Palma","ip":"83.223.227.125","ip_region":"Lisbon, Lisbon, Portugal"},"2":{"id":2,"name":"Manolo Engracia","ip":"181.191.232.168","ip_region":"Latacunga, Provincia de Cotopaxi, Ecuador"},"3":{"id":3,"name":"Fito Cabrales","ip":"77.162.109.160","ip_region":"Roosendaal, North Brabant, Netherlands"},"4":{"id":4,"name":"Paco Lopez","ip":"120.90.101.160","ip_region":"Beijing, Beijing, China"},"5":{"id":5,"name":"Esther Garc\u00eda","ip":"90.90.101.160","ip_region":"Paris, \u00cele-de-France, France"}}' | tee resources/db_test/users.json > /dev/null

echo '{"1":{"ip":"83.223.227.125","userId":1},"2":{"ip":"181.191.232.168","userId":2},"3":{"ip":"77.162.109.160","userId":3},"4":{"ip":"120.90.101.160"},"5":{"ip":"90.90.101.160"}}' | tee resources/db_test/users_ip.json > /dev/null

echo "Datasource created"